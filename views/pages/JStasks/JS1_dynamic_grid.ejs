<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dynamic grid</title>
    <style>
      td {
        height: 50px;
        width: 50px;
      }

      table,
      tr,
      td {
        border: 1px solid black;
        border-collapse: collapse;
      }

      tr:nth-of-type(even) td:nth-of-type(even),
      tr:nth-of-type(odd) td:nth-of-type(odd) {
        background: turquoise;
      }

      tr:nth-of-type(odd) td:nth-of-type(even),
      tr:nth-of-type(even) td:nth-of-type(odd) {
        background: #e6e6fa;
      }
      footer {
        position: absolute;
        bottom: 0;
      }
      #foot-div {
        display: flex;
        justify-content: center;
      }
      .col-btns,
      .row-btns {
        height: 50px;
        width: 50px;
        background-color: lightblue;
        border: none;
        margin: 10px;
      }

      #col-btn-div {
        display: flex;
        flex-direction: column;
      }
      #row-btn-div {
        display: flex;

        justify-content: center;
      }
      #hor-div {
        display: flex;
        height: 100vh;
      }
      #tableDiv {
        margin: auto auto;
        padding: 50px;
      }
      #col-btn {
        display: flex;
        align-items: center;
      }
    </style>
  </head>
  <body>
    <div id="row-btn">
      <div id="row-btn-div">
        <button class="row-btns" onclick="addRow()">row+</button>
        <button class="row-btns" onclick="removeRow()">row-</button>
      </div>
    </div>
    <div id="hor-div">
      <div id="col-btn">
        <div id="col-btn-div">
          <button class="col-btns" onclick="addCol()">col+</button>
          <button class="col-btns" onclick="removeCol()">col-</button>
        </div>
      </div>
      <div id="tableDiv">
        <table id="tb">
          <tr id="fr">
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td></td>
            <td></td>
          </tr>
        </table>
      </div>
    </div>

    <div id="foot-div">
      <footer>Abhishek Verma 24DEV035 01/02/2024</footer>
    </div>
    <script>
      function addRow() {
        const table = document.querySelector("#tb");
        // console.log(table);
        let tf = document.getElementById("fr");
        let count_td = tf.childElementCount;
        // console.log(count_td);
        let tr = document.createElement("tr");
        for (let index = 1; index <= count_td; index++) {
          //   let fr = document.getElementById("fr");
          const td = document.createElement("td");
          tr.appendChild(td);
        }
        table.appendChild(tr);
      }
      function addCol() {
        let trs = document.querySelectorAll("#tb tr");
        // let rows = Array.from(table.rows);
        // console.log(trs);
        for (let tr of trs) {
          let td = document.createElement("td");
          tr.appendChild(td);
        }
      }
      function removeRow() {
        let table = document.getElementById("tb");
        let count_tr = table.rows.length;
        console.log(count_tr);
        if (count_tr > 2) {
          table.deleteRow(count_tr - 1);
        }
      }
      function removeCol() {
        let trs = document.querySelectorAll("#tb tr");
        console.log(trs[0].cells.length);

        if (trs[0].cells.length > 2) {
          for (let tr of trs) {
            tr.removeChild(tr.lastChild);
          }
        }
      }
    </script>
  </body>
</html>
